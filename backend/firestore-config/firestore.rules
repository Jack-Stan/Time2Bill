rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Voor ontwikkeling - heel permissief
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Als je later veiligere regels wilt gebruiken, ontcommentarieer deze:
