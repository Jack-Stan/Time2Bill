    //   // Basisregel voor toegang tot gebruikersdocumenten
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    //   
    //   // Belangrijke regel voor toegang tot subcollecties
    //   match /{collection}/{document=**} {
    //     allow read, write: if request.auth != null && request.auth.uid == userId;
    //   }
    // }
  }
}
